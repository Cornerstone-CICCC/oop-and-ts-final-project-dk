<header class="header">
    <div class="left-section">
      <img src="/images/header/search.png" alt="Buscar" class="search-icon"/>
      <input type="text" placeholder="Search" class="search-bar">
    </div>
    <div class="right-section">
      <button class="icon-button">
        <img src="/images/header/bell.png" alt="about" class="icon"/>
      </button>
      <button class="icon-button">
        <img src="/images/header/faq.png" alt="About" class="icon"/>
      </button>
      <div class="profile-pic">
        <img src="/images/header/profile.jpg" alt="Usuario" class="profile-img"/>
      </div>
    </div>
  </header>

  <style>
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 20px;
      background-color: #f8f8f8;
      border-bottom: 1px solid #e0e0e0;
    }
  
    .left-section {
      display: flex;
      align-items: center;
      gap: 8px;
    }
  
    .search-bar {
      padding: 8px 12px;
      border-radius: 20px;
      border: 1px solid #ccc;
      outline: none;
      width: 800px;
    }
  
    .search-icon {
      width: 20px;
      height: 20px;
    }
  
    .right-section {
      display: flex;
      align-items: center;
      gap: 15px;
    }
  
    .icon-button {
      background: none;
      border: none;
      cursor: pointer;
    }
  
    .icon {
      width: 24px;
      height: 24px;
    }
  
    .profile-pic {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      overflow: hidden;
    }
  
    .profile-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    @media (max-width: 768px) {
      .search-bar {
        width: 100%;
        padding: 6px 10px; 
      }

      .search-icon {
        width: 24px;
        height: 24px;
      }

      .icon {
        width: 30px;
        height: 30px;
      }

      .profile-pic {
        width: 45px; 
        height: 45px;
      }
    }

    @media (max-width: 480px) {
      .search-bar {
        width: 100%; 
        padding: 4px 8px;
        font-size: 14px; 
      }

      .search-icon {
        width: 20px; 
        height: 20px;
      }

      .icon {
        width: 28px;
        height: 28px;
      }

      .profile-pic {
        width: 40px;
        height: 40px;
      }
    }
  </style>

